@model IEnumerable<_19T1021112.DomainModels.Employee>
@{
    ViewBag.Title = "Quản lý nhân viên";
}

<div class="box box-primary">
    <div class="box-boy">
        <form>
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search" value="@ViewBag.SearchValue" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>

                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        @*Kết quả tìm kiếm*@
        <p style="margin-top:10px;">
            Có <strong>@ViewBag.RowCount</strong> nhân viên trong tổng số <strong>@ViewBag.PageCount</strong> trang.
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ảnh</th>
                        <th>Họ đệm</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày sinh</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.Photo" class="user-image" alt="User Image" width="50px"></td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.BirthDate</td>
                            <td>@item.Email</td>
                            <td>
                                <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <div class="text-center">
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (i == ViewBag.Page)
                        {
                            <li class="active"><a href="#">@i</a></li>
                        }
                        else
                        {
                            <li><a href="~/Employee?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>


